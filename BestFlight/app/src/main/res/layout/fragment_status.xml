<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background"
    tools:context="ar.edu.itba.it.hci.bestflight.StatusFragment"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:text="Status"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:id="@+id/airlinesSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/flightNumberET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:hint="Flight Number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/infoFlightET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.71"
                android:text="TextView" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabAddNot"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.17"
                android:clickable="true"

                app:fabSize="mini"
                app:srcCompat="@drawable/ic_minus_white_48dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
